<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginStart="29dp"
        android:text="Position Title *"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:id="@+id/et_title"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/background"
        android:paddingLeft="29dp"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginStart="29dp"
        android:text="Company Name *"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:id="@+id/et_compName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/background"
        android:paddingLeft="29dp"
        android:textSize="17dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="21dp"
            android:text="Date from *"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"/>

        <EditText
            android:id="@+id/et_dateFrom"
            android:layout_width="144.99dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textView66"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:ems="10"
            android:background="@drawable/background"
            />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="107dp"
            android:fontFamily="@font/nunito"
            android:text="Date To *"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_dateTo"
            android:layout_width="144.99dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textView66"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:layout_toEndOf="@+id/et_dateFrom"
            android:ems="10"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"

            android:background="@drawable/background"
            android:fontFamily="@font/nunito"/>

    </RelativeLayout>
    </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>